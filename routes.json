{
  "root":"http://ca-front:80/",
  "_root_public": "true",
  "auth":{
    "source": "email",
    "destination": "http://ca-data:9099/services/caMicroscope/Auth/query/get?user={USER}",
    "check": "user"
  },
  "services":{
    "data":{
      "_public": "true",
      "_base": "http://ca-data:9099/services/caMicroscope",
      "Mark": {
        "get":"/Mark/query/get",
        "find":"/Mark/query/find",
        "multi":"/Mark/query/multiFind",
        "types":"/Mark/query/findTypes",
        "post":"/Mark/submit/json",
        "delete":"/Mark/delete/deleteMark"
      },
      "Overlay": {
        "get":"/Overlay/query/get",
        "find":"/Overlay/query/find",
        "post":"/Overlay/submit/json",
        "delete":"/Overlay/delete/deleteOverlay",
        "update":"/Overlay/delete/updateOverlay"
      },
      "Slide": {
        "get":"/Slide/query/get",
        "find":"/Slide/query/find",
        "post":"/Slide/submit/json",
        "delete":"/Slide/delete/deleteSlide",
        "update":"/Slide/delete/updateSlide"
      },
      "Template": {
        "get":"/Template/query/get",
        "find":"/Template/query/find",
        "post":"/Template/submit/json",
        "delete":"/Template/delete/deleteTemplate"
      }
    },
    "img": {
      "_base":"http://ca-iip/fcgi-bin/iipsrv.fcgi",
      "Slide":{
        "_resolver":{
          "destination":"?DeepZoom={OUT}",
          "url":"http://ca-data:9099/services/caMicroscope/Slide/query/get?id={IN}",
          "field":"location",
          "before":["_files", ".dzi"]
        }
      }
    },
    "load": {
      "_base": "http://ca-load:4000",
      "Upload": {
        "start":"/upload/start",
        "continue":"/upload/continue",
        "finish":"/upload/finish"
      },
      "Slide":{
        "info":"/data/one",
        "info":"/data/thumbnail"
      }
    }
  }
}
